<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:MauiSampleApp.ViewModels"
    x:Class="MauiSampleApp.Views.ItemTemplates.NotificationChannelItemTemplate"
    x:DataType="vm:NotificationChannelViewModel">

    <Grid
        Padding="4"
        ColumnDefinitions="1*, 2*"
        ColumnSpacing="4"
        RowDefinitions="*">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            FontAttributes="Bold"
            Text="{Binding ChannelId}"
            VerticalOptions="Start" />

        <Grid
            Grid.Row="0"
            Grid.Column="1"
            ColumnDefinitions="Auto, *"
            ColumnSpacing="4"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto">

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="ChannelName:" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                FontFamily="{StaticResource FontFamily.Monospace.Regular}"
                Text="{Binding ChannelName}" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="Description:" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                FontFamily="{StaticResource FontFamily.Monospace.Regular}"
                LineBreakMode="TailTruncation"
                Text="{Binding Description}" />

            <Label
                Grid.Row="2"
                Grid.Column="0"
                Text="LockscreenVisibility:" />
            <Label
                Grid.Row="2"
                Grid.Column="1"
                FontFamily="{StaticResource FontFamily.Monospace.Regular}"
                Text="{Binding LockscreenVisibility}" />

            <Label
                Grid.Row="3"
                Grid.Column="0"
                Text="Group:" />
            <Label
                Grid.Row="3"
                Grid.Column="1"
                FontFamily="{StaticResource FontFamily.Monospace.Regular}"
                Text="{Binding Group}" />

            <Label
                Grid.Row="4"
                Grid.Column="0"
                Text="Importance:" />
            <Label
                Grid.Row="4"
                Grid.Column="1"
                FontFamily="{StaticResource FontFamily.Monospace.Regular}"
                Text="{Binding Importance}" />
        </Grid>
    </Grid>
</ContentView>
